@model vidily.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* the following is razor view engine syntax-->
    the 
*@


@{
    var className = Model.Customers.Count > 0 ? "popular" : null;
}

@* if class name is null it will not be rendered in html *@

<h2 class="@className">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <p>No one has rented this movie before</p>
}
else
{
    <ul>
        @* can write c# code by prefixing with at sign *@

        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>

}

